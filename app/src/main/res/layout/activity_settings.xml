<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@drawable/surge">


    <ImageView
        android:id="@+id/settings_logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/cdslogo"/>

    <TextView
        android:id="@+id/currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_logo"
        android:layout_marginLeft="30dp"
        android:text="Currency"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        />

    <Spinner
        android:id="@+id/currency_spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_logo"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="10dp"
        android:outlineAmbientShadowColor="@android:color/white"
        android:background="@android:color/white"
       
        >

    </Spinner>

    <TextView
        android:id="@+id/legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Legal"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/currency"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/aboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/legal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Version : 0.0.1"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/aboutUs"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        />

</RelativeLayout>